{
  "schemaVersion": 1,
  "id": "${modId}",
  "version": "${modVersion}",
  "name": "${modName}",
  "authors": [
    "Syorito Hatsuki"
  ],
  "contact": {
    "homepage": "https://syorito-hatsuki.dev/",
    "issues": "https://github.com/syorito-hatsuki/${modId}/issues",
    "sources": "https://github.com/syorito-hatsuki/${modId}"
  },
  "license": "MIT Licence",
  "icon": "assets/${modId}/icon.png",
  "accessWidener": "${modId}.accesswidener",
  "environment": "*",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "dev.syoritohatsuki.fabricapplicationlauncher.FabricApplicationLauncherClientMod"
      }
    ]
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/pbwnMwnUD6"
      },
      "badges": [],
      "update_checker": true
    },
    "mcb": [
      {
        "name": "Ducky House",
        "fillColor": -13730510,
        "outlineColor": -11751600
      }
    ]
  },
  "mixins": [
    "${modId}.mixins.json"
  ],
  "depends": {
    "fabric": "*",
    "fabricloader": "*",
    "fabric-language-kotlin": "*",
    "minecraft": ">=${minecraftVersion}",
    "java": ">=${javaVersion}"
  },
  "recommends": {
    "modmenu-badges-lib": "*"
  }
}